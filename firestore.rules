rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin'
      );
    }
    
    // Regras para clientes
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == clienteId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin'
      );
    }
    
    // Regras para colaboradores
    match /colaboradores/{colaboradorId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == colaboradorId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin'
      );
    }
    
    // Regras para projetos - PERMITIR ACESSO TOTAL PARA USUÁRIOS AUTENTICADOS
    match /projetos/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para presets
    match /presets/{presetId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin';
    }
    
    // Regras para relatórios
    match /relatorios/{relatorioId} {
      allow read, write: if request.auth != null && (
        resource.data.clientId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin'
      );
    }
    
    // Regras para resumos de relatórios
    match /relatorio_summaries/{summaryId} {
      allow read, write: if request.auth != null && (
        resource.data.clientId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'admin'
      );
    }
  }
} 