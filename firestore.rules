rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para coleção users - usuários só podem acessar seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Regras para coleção colaboradores - apenas admins podem acessar
    match /colaboradores/{colaboradorId} {
      allow read, write, create, delete: if request.auth != null;
    }
    
    // Regras para coleção projects - usuários autenticados podem acessar
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleção documents - usuários autenticados podem acessar
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleção test - apenas para testes de desenvolvimento
    match /test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Regra geral mais permissiva para desenvolvimento (REMOVER EM PRODUÇÃO)
    // Descomente a linha abaixo se quiser acesso total para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 