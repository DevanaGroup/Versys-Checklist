rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras simplificadas:
    // Permite que qualquer pessoa leia todos os arquivos.
    // Permite que apenas usuários autenticados escrevam (façam upload, editem, excluam) arquivos.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 